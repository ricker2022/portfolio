@using Wb.Common;
@{Layout = "~/Views/Shared/_TeamLayout.cshtml";}
<script>
    
    function trim(strvalue) {
        ptntrim = /(^\s*)|(\s*$)/g;
        return strvalue.replace(ptntrim, "");
    }

    function ValidEmail(emailtoCheck) {
