        var regExp = /^[^@@^\s]+@@[^\.@@^\s]+(\.[^\.@@^\s]+)+$/;
        if (emailtoCheck.match(regExp))
            return true;
        else
            return false;
    }

    function CheckField() {
        is_valid = true;

        var text_area_return = check_textarea_length($('#message_textarea'), 70);
        if (!text_area_return) {
            $('#error_msg').html('字元超過70字');
            is_valid = false;
            return;
        }
        else if (trim($('#message_textarea').val()).length == 0) {
            $('#error_msg').html('回覆字數太少');
            $('#message_textarea').focus();
            is_valid = false;
            return;
        }
        else {
            $('#error_msg').html('');
        }


        if (is_valid) {
            $('#reply_form').submit();
        }
    }
</script>
