@using Wb.Models;
@using Wb.Pager;
@using Wb.Common;
@model PagedList<好友>
<div  class="sub_navi list_row_title" >
    <div class="col_8">好友列表</div>
    <div class="col_2"><a href="#popupPager" class="function_btn call_pager"><i class="fa fa-sort"></i></a></div>
    <br clear="all"/>
</div>
<ul id="news_list" class="reset_ul" >
@foreach (好友 item in Model)
{
    
    <li >
        <a href="@Url.RouteUrl("Default", new { controller = "member", action = "info", molo = WbUtil.EncryptDES(item.friendinfo.molokey) })">
        <div class="img member">
            <img src="@item.iconDisplay" onerror="this.src='@Url.Content("~/upload/website/default.png") '" />            
        </div>
        <h3 class="has_img">@item.Nickname</h3>
        </a>
    </li>
}
@foreach (好友 item in ViewBag.nfriend_list)
{
    if (item.名稱1 != M_Member.myProfile.nickname)
    {
        <li>
        <a href="@Url.RouteUrl("Default", new { controller = "member", action = "info", molo = WbUtil.EncryptDES(item.friendinfo.molokey) })">
            <div class="img member">
                <img src="@item.iconDisplay" onerror="this.src='@Url.Content("~/upload/website/default.png") '" />
            </div>
            <h3 class="has_img">@item.Nickname</h3>
        </a>
        <a href="@Url.RouteUrl("Default", new { controller = "member", action = "AjaxAgreeFriend", name = item.Nickname })" class="friend_check_btn">確認</a>
        
    </li>
    }
}
</ul>