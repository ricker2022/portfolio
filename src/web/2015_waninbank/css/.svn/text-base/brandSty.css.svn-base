body
{
    margin: 0;
    padding: 0;
    font-family: 微軟正黑體 , MS PMincho, 新細明體;
	font-size:12px;
	color:#00b0ff;
}
span{text-decoration:underline;font-size:12px;color:#00b0ff; cursor:pointer}

#nav {
	position: relative;
	overflow: hidden;
	list-style: none;
	width:980px;
	height:400px;
	margin: 0;
	padding: 0;
	box-shadow: 0px 5px 12px rgba(0, 0, 0, 0.44);
    -moz-box-shadow: 0px 5px 12px rgba(0, 0, 0, 0.44);
    -webkit-box-shadow: 0px 5px 12px rgba(0, 0, 0, 0.44);
}
.navend {
	float: right;
	background:#9F0;
	width: 5px; /* end.gif 的寬 */
	height: 30px; /* end.gif 的高 */
}
#nav li {
	position: absolute;
	overflow: hidden;
	padding: 0;
	margin: 0 ;
}
#nav li a {
	text-indent: -9999px;
	display: block;
	width:580px; /* 預設的寬 */
	height:400px; /* 圖片的高 */
}
#nav li span{
    display:block;
    width:180px;
    height:25px;
}
